rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for products
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders - anyone can create, only authenticated users can read/update
    match /orders/{orderId} {
      allow create: if true;
      allow read, update: if request.auth != null;
    }
    
    // Custom cake requests - anyone can create, only authenticated users can read
    match /custom-cake-requests/{requestId} {
      allow create: if true;
      allow read: if request.auth != null;
    }
    
    // Feedback - anyone can create, only authenticated users can read
    match /feedback/{feedbackId} {
      allow create: if true;
      allow read: if request.auth != null;
    }
    
    // Settings - public read, admin write
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
